{
  "info": {
    "name": "FAQ Management - Complete Flow",
    "description": "Complete flow for testing FAQ creation with admin authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Admin Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save the access token to environment",
              "if (pm.response.code === 200 || pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.data && jsonData.data.accessToken) {",
              "        pm.environment.set('admin_access_token', jsonData.data.accessToken);",
              "        console.log('Access token saved:', jsonData.data.accessToken.substring(0, 50) + '...');",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@pkservizi.com\",\n  \"password\": \"Admin@123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/admin/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "admin", "login"]
        },
        "description": "Login as admin to get access token"
      },
      "response": []
    },
    {
      "name": "2. Create FAQ (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_access_token}}",
            "description": "Admin JWT token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"serviceId\": \"1b7e244b-6092-4236-afc9-9d66fba5b2a7\",\n  \"question\": \"What documents do I need for ISEE calculation?\",\n  \"answer\": \"You will need: identity documents, fiscal code, income documents...\",\n  \"order\": 1,\n  \"category\": \"Documents\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/faqs",
          "host": ["{{base_url}}"],
          "path": ["faqs"]
        },
        "description": "Create a new FAQ. Requires admin authentication and faqs:create permission."
      },
      "response": []
    },
    {
      "name": "3. Get All FAQs (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_access_token}}",
            "description": "Admin JWT token"
          }
        ],
        "url": {
          "raw": "{{base_url}}/faqs",
          "host": ["{{base_url}}"],
          "path": ["faqs"]
        },
        "description": "Get all FAQs. Requires admin authentication."
      },
      "response": []
    },
    {
      "name": "4. Get Public FAQs (No Auth)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/faqs/public",
          "host": ["{{base_url}}"],
          "path": ["faqs", "public"]
        },
        "description": "Get active FAQs. No authentication required."
      },
      "response": []
    },
    {
      "name": "5. Update FAQ (Admin)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_access_token}}",
            "description": "Admin JWT token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"question\": \"Updated question\",\n  \"answer\": \"Updated answer\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/faqs/:id",
          "host": ["{{base_url}}"],
          "path": ["faqs", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "FAQ_ID_HERE"
            }
          ]
        },
        "description": "Update an existing FAQ. Requires admin authentication."
      },
      "response": []
    },
    {
      "name": "6. Delete FAQ (Admin)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_access_token}}",
            "description": "Admin JWT token"
          }
        ],
        "url": {
          "raw": "{{base_url}}/faqs/:id",
          "host": ["{{base_url}}"],
          "path": ["faqs", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "FAQ_ID_HERE"
            }
          ]
        },
        "description": "Delete a FAQ. Requires admin authentication."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    }
  ]
}
